{
  "name": "wordle-wthout-limits",
  "description": "A fork of the popular word game Wordle, allowing unlimited play",
  "author": "Jayson Knight <info@jaysonknight.com> (https://jaysonknight.com)",
  "version": "0.8.0",
  "private": true,
  "dependencies": {
    "@azure/functions": "^4.11.1",
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "axios": "^1.7.9",
    "classnames": "^2.5.1",
    "grapheme-splitter": "^1.0.4",
    "inversify": "^7.11.0",
    "react": "^19.0.0",
    "react-countdown": "^2.3.6",
    "react-dom": "^19.0.0",
    "reflect-metadata": "^0.2.2",
    "ua-parser-js": "^2.0.9",
    "web-vitals": "^5.0.0"
  },
  "scripts": {
    "analyze": "source-map-explorer 'dist/assets/*.js'",
    "build": "tsc && vite build",
    "build:staging": "env-cmd -f .env.staging npm run build",
    "coverage": "vitest run --coverage",
    "docs": "npx typedoc src/",
    "fix": "prettier --write src",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 && prettier --check src",
    "preview": "vite preview",
    "start": "vite",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "prepare": "husky install",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "serve": "vite preview",
    "azure-sim": "swa start ./public"
  },

  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.19.8",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.3",
    "@types/ua-parser-js": "^0.7.39",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^3.0.1",
    "autoprefixer": "^10.4.20",
    "env-cmd": "^11.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.3.3",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "source-map-explorer": "^2.5.3",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^6.0.7",
    "vite-plugin-env-compatible": "^2.0.1",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-pwa": "^0.21.2",
    "vitest": "^3.0.1"
  },
  "lint-staged": {
    "src/*.{ts,tsx,js,jsx,css,md}": "prettier --write"
  }
}
