{
  "name": "wordle-wthout-limits",
  "description": "A fork of the popular word game Wordle, allowing unlimited play",
  "author": "Jayson Knight <info@jaysonknight.com> (https://jaysonknight.com)",
  "version": "0.8.0",
  "private": true,
  "dependencies": {
    "@azure/functions": "^4.9.0",
    "@headlessui/react": "^1.7.19",
    "@heroicons/react": "^2.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "axios": "^1.7.9",
    "classnames": "^2.5.1",
    "env-cmd": "^11.0.0",
    "gh-pages": "^6.3.0",
    "grapheme-splitter": "^1.0.4",
    "inversify": "^6.2.2",
    "react": "^18.3.1",
    "react-countdown": "^2.3.6",
    "react-dom": "^18.3.1",
    "react-scripts": "^5.0.1",
    "reflect-metadata": "^0.2.2",
    "source-map-explorer": "^2.5.3",
    "typescript": "^4.9.5",
    "ua-parser-js": "^1.0.41",
    "web-vitals": "^4.2.4"
  },
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "build": "react-scripts build",
    "build:staging": "env-cmd -f .env.staging npm run build",
    "coverage": "npm test -- --coverage",
    "docs": "npx typedoc src/",
    "eject": "react-scripts eject",
    "fix": "prettier --write src",
    "lint": "prettier --check src",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "prepare": "husky install",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "serve": "serve -s build",
    "azure-sim": "swa start ./public"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/ua-parser-js": "^0.7.39",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.3",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.18"
  },
  "lint-staged": {
    "src/*.{ts,tsx,js,jsx,css,md}": "prettier --write"
  }
}
